		<segment id="60" parent="59" relname="elaboration-attribute">found on street</segment>
		<segment id="61" parent="136" relname="same-unit">not secret ,</segment>
		<segment id="62" parent="136" relname="attribution-positive">say feds "</segment>
		<segment id="63" parent="137" relname="attribution-positive">— The Canadian Press , August 15 , 2008</segment>
		<segment id="64" parent="139" relname="span">" Environment Canada security report found on street " —</segment>
