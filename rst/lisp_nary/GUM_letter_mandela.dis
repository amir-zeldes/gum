    ( Nucleus (leaf 1) (rel2par span) (text _!Sir de Villiers Graaff ,_!) )
    ( Satellite (leaf 2) (rel2par elaboration-attribute) (text _!Leader of the Opposition , House of Assembly ,_!) )
  )
  ( Nucleus (span 3 104) (rel2par span)
    ( Satellite (leaf 3) (rel2par context-circumstance) (text _!CAPE TOWN_!) )
    ( Nucleus (span 4 104) (rel2par span)
      ( Nucleus (span 4 99) (rel2par span)
        ( Satellite (leaf 4) (rel2par organization-preparation) (text _!Sir ,_!) )
        ( Nucleus (span 5 99) (rel2par span)
          ( Satellite (span 5 35) (rel2par context-background)
            ( Satellite (span 5 20) (rel2par context-background)
              ( Nucleus (span 5 19) (rel2par span)
                ( Satellite (span 5 10) (rel2par context-background)
                  ( Nucleus (leaf 5) (rel2par span) (text _!In one week 's time , the Verwoerd Government intends to inaugurate its Republic ._!) )
                  ( Satellite (span 6 10) (rel2par context-background)
                    ( Nucleus (span 6 7) (rel2par span)
                      ( Satellite (leaf 6) (rel2par evaluation-comment) (text _!It is unnecessary to state_!) )
                      ( Nucleus (leaf 7) (rel2par span) (text _!that this intention has never been endorsed by the non-white majority of this country ._!) )
                    )
                    ( Satellite (span 8 10) (rel2par explanation-evidence)
                      ( Nucleus (leaf 8) (rel2par joint-list) (text _!The decision has been taken by little over half of the White community ;_!) )
                      ( Nucleus (span 9 10) (rel2par joint-list)
                        ( Nucleus (leaf 9) (rel2par span) (text _!it is opposed by every articulate group amongst the African , Coloured and Indian communities ,_!) )
                        ( Satellite (leaf 10) (rel2par elaboration-attribute) (text _!who constitute the majority of this country ._!) )
                      )
                    )
                  )
                )
                ( Nucleus (span 11 19) (rel2par span)
                  ( Nucleus (span 11 12) (rel2par span)
                    ( Nucleus (leaf 11) (rel2par span) (text _!The Government 's intentions to proceed , under these circumstances , has created conditions_!) )
                    ( Satellite (leaf 12) (rel2par evaluation-comment) (text _!bordering on crisis ._!) )
                  )
                  ( Satellite (span 13 19) (rel2par explanation-evidence)
                    ( Nucleus (span 13 16) (rel2par joint-list)
                      ( Nucleus (span 13 14) (rel2par span)
                        ( Nucleus (leaf 13) (rel2par joint-list) (text _!We have been excluded from the Commonwealth ,_!) )
                        ( Nucleus (leaf 14) (rel2par joint-list) (text _!and condemned 95 to 1 at the United Nations ._!) )
                      )
                      ( Satellite (span 15 16) (rel2par elaboration-additional)
                        ( Nucleus (leaf 15) (rel2par joint-list) (text _!Our trade is being boycotted ,_!) )
                        ( Nucleus (leaf 16) (rel2par joint-list) (text _!and foreign capital is being withdrawn ._!) )
                      )
                    )
                    ( Nucleus (span 17 19) (rel2par joint-list)
                      ( Nucleus (leaf 17) (rel2par span) (text _!The country is becoming an armed camp ,_!) )
                      ( Satellite (span 18 19) (rel2par elaboration-additional)
                        ( Nucleus (leaf 18) (rel2par joint-list) (text _!the Government preparing for civil war with increasingly heavy police and military apparatus ,_!) )
                        ( Nucleus (leaf 19) (rel2par joint-list) (text _!the non-white population for a general strike and long - term non-cooperation with the Government ._!) )
                      )
                    )
                  )
                )
              )
              ( Satellite (leaf 20) (rel2par evaluation-comment) (text _!None of us can draw any satisfaction from this developing crisis ._!) )
            )
            ( Nucleus (span 21 35) (rel2par span)
              ( Nucleus (span 21 30) (rel2par span)
                ( Satellite (span 21 25) (rel2par organization-preparation)
                  ( Nucleus (span 21 22) (rel2par same-unit)
                    ( Nucleus (leaf 21) (rel2par span) (text _!We , on our part , in the name of the African people_!) )
                    ( Satellite (leaf 22) (rel2par context-background) (text _!- a majority of South Africans -_!) )
                  )
                  ( Nucleus (span 23 24) (rel2par same-unit)
                    ( Nucleus (leaf 23) (rel2par span) (text _!and on the authority_!) )
                    ( Satellite (leaf 24) (rel2par elaboration-attribute) (text _!given us by 1 400 elected African representatives at the Pietermaritzburg Conference of 25 and 26 March ,_!) )
                  )
                  ( Nucleus (leaf 25) (rel2par same-unit) (text _!have put forward serious proposals for a way out of the crisis ._!) )
                )
                ( Nucleus (span 26 30) (rel2par span)
                  ( Nucleus (span 26 27) (rel2par joint-list)
                    ( Nucleus (leaf 26) (rel2par span) (text _!We have called on the Government to convene an elected National Convention of representatives of all races_!) )
                    ( Satellite (leaf 27) (rel2par mode-manner) (text _!without delay ,_!) )
                  )
                  ( Nucleus (span 28 30) (rel2par joint-list)
                    ( Nucleus (leaf 28) (rel2par span) (text _!and to charge that Convention with the task_!) )
                    ( Satellite (span 29 30) (rel2par elaboration-attribute)
                      ( Nucleus (leaf 29) (rel2par span) (text _!of drawing up a new Constitution for this country_!) )
                      ( Satellite (leaf 30) (rel2par elaboration-attribute) (text _!which would be acceptable to all racial groups ._!) )
                    )
                  )
                )
              )
              ( Satellite (span 31 35) (rel2par explanation-justify)
                ( Nucleus (span 31 32) (rel2par span)
                  ( Nucleus (leaf 31) (rel2par span) (text _!We can see no workable alternative to this proposal ,_!) )
                  ( Satellite (leaf 32) (rel2par adversative-antithesis) (text _!except that the Nationalist Government proceeds to enforce a minority decision on all of us , with the certain consequence of still deeper crisis , and a continuing period of strife and disaster ahead ._!) )
                )
                ( Satellite (span 33 35) (rel2par restatement-partial)
                  ( Satellite (leaf 33) (rel2par organization-preparation) (text _!Stated bluntly , the alternatives appear to be these :_!) )
                  ( Nucleus (span 34 35) (rel2par span)
                    ( Nucleus (leaf 34) (rel2par joint-disjunction) (text _!talk it out ,_!) )
                    ( Nucleus (leaf 35) (rel2par joint-disjunction) (text _!or shoot it out ._!) )
                  )
                )
              )
            )
          )
          ( Nucleus (span 36 99) (rel2par span)
            ( Nucleus (span 36 97) (rel2par span)
              ( Nucleus (span 36 78) (rel2par span)
                ( Nucleus (span 36 55) (rel2par span)
                  ( Satellite (span 36 43) (rel2par explanation-motivation)
                    ( Nucleus (leaf 36) (rel2par span) (text _!Outside of the Nationalist Party , most of the important and influential bodies of public opinion have clearly decided to talk it out ._!) )
                    ( Satellite (span 37 43) (rel2par explanation-evidence)
                      ( Nucleus (leaf 37) (rel2par joint-list) (text _!The South African Indian Congress , the only substantial Indian community organisation , has welcomed and endorsed the call for a National Convention ._!) )
                      ( Nucleus (span 38 39) (rel2par joint-list)
                        ( Nucleus (leaf 38) (rel2par span) (text _!So , too have the Coloured people , through the Coloured Convention movement_!) )
                        ( Satellite (leaf 39) (rel2par elaboration-attribute) (text _!which has the backing of the main bodies of Coloured opinion ._!) )
                      )
                      ( Nucleus (span 40 42) (rel2par joint-list)
                        ( Nucleus (span 40 41) (rel2par same-unit)
                          ( Nucleus (leaf 40) (rel2par span) (text _!A substantial European body of opinion ,_!) )
                          ( Satellite (leaf 41) (rel2par elaboration-attribute) (text _!represented by both the Progressive and the Liberal Parties ,_!) )
                        )
                        ( Nucleus (leaf 42) (rel2par same-unit) (text _!has endorsed our call ._!) )
                      )
                      ( Nucleus (leaf 43) (rel2par joint-list) (text _!Support for a National Convention has come also from the bulk of the English language press , from several national church organisations , and from many others ._!) )
                    )
                  )
                  ( Nucleus (span 44 55) (rel2par span)
                    ( Nucleus (span 44 51) (rel2par span)
                      ( Satellite (leaf 44) (rel2par topic-solutionhood) (text _!But where , Sir , does the United Party stand ?_!) )
                      ( Nucleus (span 45 51) (rel2par span)
                        ( Satellite (span 45 47) (rel2par context-background)
                          ( Nucleus (span 45 46) (rel2par joint-list)
                            ( Nucleus (leaf 45) (rel2par span) (text _!We have yet to hear from this most important organisation_!) )
                            ( Satellite (leaf 46) (rel2par evaluation-comment) (text _!- the main organisation in fact of anti-Nationalist opinion amongst the European community ._!) )
                          )
                          ( Nucleus (leaf 47) (rel2par joint-list) (text _!Or from you , its leader ._!) )
                        )
                        ( Nucleus (span 48 51) (rel2par span)
                          ( Satellite (span 48 49) (rel2par explanation-motivation)
                            ( Satellite (leaf 48) (rel2par contingency-condition) (text _!If the country 's leading statesmen fail to lead at this moment ,_!) )
                            ( Nucleus (leaf 49) (rel2par span) (text _!then the worst is inevitable ._!) )
                          )
                          ( Nucleus (span 50 51) (rel2par span)
                            ( Nucleus (leaf 50) (rel2par span) (text _!It is time_!) )
                            ( Satellite (leaf 51) (rel2par purpose-attribute) (text _!for you , Sir , and your Party , to speak out ._!) )
                          )
                        )
                      )
                    )
                    ( Satellite (span 52 55) (rel2par restatement-partial)
                      ( Nucleus (span 52 54) (rel2par span)
                        ( Satellite (span 52 53) (rel2par topic-solutionhood)
                          ( Nucleus (leaf 52) (rel2par joint-list) (text _!Are you for a democratic and peaceable solution to our problems ?_!) )
                          ( Nucleus (leaf 53) (rel2par joint-list) (text _!Are you , therefore , for a National Convention ?_!) )
                        )
                        ( Nucleus (leaf 54) (rel2par span) (text _!We in South Africa , and the world outside expect an answer ._!) )
                      )
                      ( Satellite (leaf 55) (rel2par adversative-antithesis) (text _!Silence at this time enables , Dr. Verwoerd to lead us onwards towards the brink of disaster ._!) )
                    )
                  )
                )
                ( Satellite (span 56 78) (rel2par elaboration-additional)
                  ( Nucleus (span 56 74) (rel2par span)
                    ( Satellite (span 56 60) (rel2par adversative-antithesis)
                      ( Satellite (span 56 59) (rel2par adversative-concession)
                        ( Nucleus (span 56 57) (rel2par span)
                          ( Satellite (leaf 56) (rel2par attribution-positive) (text _!We realise_!) )
                          ( Nucleus (leaf 57) (rel2par span) (text _!that aspects of our proposal raise complicated problems ._!) )
                        )
                        ( Satellite (span 58 59) (rel2par elaboration-additional)
                          ( Nucleus (leaf 58) (rel2par joint-list) (text _!What shall be the basis of representation at the Convention ?_!) )
                          ( Nucleus (leaf 59) (rel2par joint-list) (text _!How shall the representatives be elected ?_!) )
                        )
                      )
                      ( Nucleus (leaf 60) (rel2par span) (text _!But these are not the issues now at stake ._!) )
                    )
                    ( Nucleus (span 61 74) (rel2par span)
                      ( Nucleus (span 61 64) (rel2par span)
                        ( Satellite (leaf 61) (rel2par organization-preparation) (text _!The issue now is a simple one ._!) )
                        ( Nucleus (span 62 64) (rel2par span)
                          ( Nucleus (span 62 63) (rel2par joint-disjunction)
                            ( Nucleus (leaf 62) (rel2par span) (text _!Are all groups to be consulted_!) )
                            ( Satellite (leaf 63) (rel2par context-circumstance) (text _!before a constitutional change is made ?_!) )
                          )
                          ( Nucleus (leaf 64) (rel2par joint-disjunction) (text _!Or only the White minority ?_!) )
                        )
                      )
                      ( Satellite (span 65 74) (rel2par evaluation-comment)
                        ( Nucleus (leaf 65) (rel2par span) (text _!A decision on this matter can not be delayed ._!) )
                        ( Satellite (span 66 74) (rel2par elaboration-additional)
                          ( Nucleus (span 66 68) (rel2par span)
                            ( Nucleus (span 66 67) (rel2par joint-sequence)
                              ( Satellite (leaf 66) (rel2par context-circumstance) (text _!Once that decision is taken ,_!) )
                              ( Nucleus (leaf 67) (rel2par span) (text _!then all other matters , of how , when and where , can be discussed ,_!) )
                            )
                            ( Nucleus (leaf 68) (rel2par joint-sequence) (text _!and agreement on them can be reached ._!) )
                          )
                          ( Satellite (span 69 74) (rel2par elaboration-additional)
                            ( Satellite (span 69 72) (rel2par context-background)
                              ( Nucleus (leaf 69) (rel2par span) (text _!On our part the door to such discussion has always been open ._!) )
                              ( Satellite (span 70 72) (rel2par explanation-evidence)
                                ( Nucleus (leaf 70) (rel2par joint-sequence) (text _!We have approached you and your Party before ,_!) )
                                ( Nucleus (span 71 72) (rel2par joint-sequence)
                                  ( Satellite (leaf 71) (rel2par attribution-positive) (text _!and suggested_!) )
                                  ( Nucleus (leaf 72) (rel2par span) (text _!that matters of difference be discussed ._!) )
                                )
                              )
                            )
                            ( Nucleus (span 73 74) (rel2par span)
                              ( Nucleus (leaf 73) (rel2par adversative-contrast) (text _!To date we have had no reply :_!) )
                              ( Nucleus (leaf 74) (rel2par adversative-contrast) (text _!Nevertheless we still hold the door open ._!) )
                            )
                          )
                        )
                      )
                    )
                  )
                  ( Satellite (span 75 78) (rel2par restatement-partial)
                    ( Satellite (span 75 76) (rel2par organization-preparation)
                      ( Satellite (leaf 75) (rel2par adversative-antithesis) (text _!But the need now is not for debate about differences of detail ,_!) )
                      ( Nucleus (leaf 76) (rel2par span) (text _!but for clarity of principle and purpose ._!) )
                    )
                    ( Nucleus (span 77 78) (rel2par span)
                      ( Nucleus (leaf 77) (rel2par joint-disjunction) (text _!For a National Convention of all races ?_!) )
                      ( Nucleus (leaf 78) (rel2par joint-disjunction) (text _!Or against ?_!) )
                    )
                  )
                )
              )
              ( Satellite (span 79 97) (rel2par explanation-motivation)
                ( Nucleus (span 79 80) (rel2par joint-list)
                  ( Nucleus (leaf 79) (rel2par span) (text _!It is still not too late_!) )
                  ( Satellite (leaf 80) (rel2par purpose-goal) (text _!to turn the tide against the Nationalist - created crisis ._!) )
                )
                ( Nucleus (span 81 97) (rel2par joint-list)
                  ( Nucleus (leaf 81) (rel2par span) (text _!A call for a National Convention from you now could well be the turning - point in our country 's history ._!) )
                  ( Satellite (span 82 97) (rel2par explanation-justify)
                    ( Nucleus (leaf 82) (rel2par joint-list) (text _!It would unite the overwhelming majority of our people , White , Coloured , Indian and African , for a single purpose - round - table talks for a new constitution ._!) )
                    ( Nucleus (span 83 87) (rel2par joint-list)
                      ( Nucleus (leaf 83) (rel2par joint-list) (text _!It would isolate the Nationalist Government ,_!) )
                      ( Nucleus (span 84 87) (rel2par joint-list)
                        ( Satellite (leaf 84) (rel2par attribution-positive) (text _!and reveal for all time_!) )
                        ( Nucleus (span 85 87) (rel2par span)
                          ( Nucleus (leaf 85) (rel2par span) (text _!that it is a minority Government ,_!) )
                          ( Satellite (span 86 87) (rel2par elaboration-attribute)
                            ( Nucleus (leaf 86) (rel2par span) (text _!clinging tenaciously to power against the popular will ,_!) )
                            ( Satellite (leaf 87) (rel2par causal-result) (text _!driving recklessly onward to a disaster for itself and us ._!) )
                          )
                        )
                      )
                    )
                    ( Nucleus (span 88 97) (rel2par joint-list)
                      ( Nucleus (span 88 89) (rel2par joint-disjunction)
                        ( Nucleus (leaf 88) (rel2par span) (text _!Your call for a National Convention now would add such strength to the already powerful call for it_!) )
                        ( Satellite (leaf 89) (rel2par causal-result) (text _!that the Government would be chary of ignoring it further ._!) )
                      )
                      ( Nucleus (span 90 97) (rel2par joint-disjunction)
                        ( Nucleus (leaf 90) (rel2par same-unit) (text _!And_!) )
                        ( Nucleus (span 91 97) (rel2par same-unit)
                          ( Satellite (leaf 91) (rel2par contingency-condition) (text _!if they nevertheless ignore the call for a Convention ,_!) )
                          ( Nucleus (span 92 97) (rel2par span)
                            ( Nucleus (span 92 93) (rel2par same-unit)
                              ( Nucleus (leaf 92) (rel2par span) (text _!the inter-racial unity_!) )
                              ( Satellite (leaf 93) (rel2par elaboration-attribute) (text _!thus cemented by your call_!) )
                            )
                            ( Nucleus (span 94 97) (rel2par same-unit)
                              ( Nucleus (leaf 94) (rel2par span) (text _!would lay the basis for the replacement of this Government of national disaster by one more acceptable to the people , one_!) )
                              ( Satellite (span 95 97) (rel2par elaboration-attribute)
                                ( Nucleus (leaf 95) (rel2par span) (text _!prepared to follow the democratic path_!) )
                                ( Satellite (span 96 97) (rel2par elaboration-attribute)
                                  ( Nucleus (leaf 96) (rel2par span) (text _!of consulting all the people_!) )
                                  ( Satellite (leaf 97) (rel2par purpose-goal) (text _!in order to resolve the crisis ._!) )
                                )
                              )
                            )
                          )
                        )
                      )
                    )
                  )
                )
              )
            )
            ( Satellite (span 98 99) (rel2par restatement-partial)
              ( Nucleus (leaf 98) (rel2par span) (text _!We urge you strongly to speak out now ._!) )
              ( Satellite (leaf 99) (rel2par explanation-motivation) (text _!It is ten days to 31 May ._!) )
            )
          )
        )
      )
      ( Satellite (span 100 104) (rel2par attribution-positive)
        ( Satellite (leaf 100) (rel2par organization-preparation) (text _!Yours faithfully_!) )
        ( Nucleus (span 101 104) (rel2par span)
          ( Nucleus (span 101 102) (rel2par restatement-repetition)
            ( Satellite (leaf 101) (rel2par organization-preparation) (text _![ Signed ]_!) )
            ( Nucleus (leaf 102) (rel2par span) (text _!Nelson Mandela_!) )
          )
          ( Nucleus (span 103 104) (rel2par restatement-repetition)
            ( Nucleus (leaf 103) (rel2par span) (text _!NELSON MANDELA_!) )
            ( Satellite (leaf 104) (rel2par elaboration-attribute) (text _!All - In African National Action Council_!) )
          )
        )
      )
    )
  )
